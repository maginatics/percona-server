+# the syslog-ng patch ignores the --log-error setting.  this restores it, more or less.
+function logger () {
+       local foo="$*"
+       local arg_s=false
+       local f
+       for f in "$@"
+       do
+               if [ "$f" = -s ]
+               then
+                       arg_s=true
+               fi
+       done
+       if [ -n "$err_log" ]
+       then
+               if $arg_s
+               then
+                       foo="tee '$err_log' 1>&2"
+               else
+                       foo="cat >> '$err_log'"
+               fi
+       fi
+       eval "$foo"
+       }
+
